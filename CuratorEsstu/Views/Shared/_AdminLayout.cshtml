<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/report.css">
    <script src="https://kit.fontawesome.com/e1461591b6.js" crossorigin="anonymous"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="sidebar">
        <ul class="list-group first-menu admin">
            <div class="top-margin"></div>
            <li class="list-group-item pl-3 py-2">
                <a asp-action="Index" asp-controller="Admin">
                    <i class="fa fa-file " aria-hidden="true"><span class="ml-2 align-middle custom-text">Создание преподавателя</span></i>
                </a>
            </li>
            <li class="list-group-item custom-icon py-2">
                <a asp-action="AllEmployee" asp-controller="Admin">
                    <i class="fa fa-people-group" aria-hidden="true"><span class="ml-2 align-middle custom-text">Просмотр сотрудников</span></i>
                </a>
            </li>
        </ul>
    </div>

    <div class="container-fluid custom-container">
        <header class="header row justify-content-end align-content-center">
            <div class="col-lg-5 col-md-6 col-sm-8 col-10 col-xl-4 col-header">
                Администратор
            </div>
            <div class="col-lg-1 col-md-1 col-sm-2 col-2 col-xl-1 col-account">
                <a asp-action="LogOut" asp-controller="Admin"><img src="~/img/user.png" alt="" class="account"></a>
            </div>
        </header>
        @RenderBody()
    </div>
</body>
</html>
