@using DataLayer.Entity;
@using PresentationLayer.Models
@model CreateEventModel
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="row-container">
    <div class="row container-сenter ">
        <div class="col-sm-12 col-md-6 col-lg-6 align-self-center">
            <div class="row justify-content-center">
                <div class="form__group field">
                    <form asp-action="CreateEvent" method="get">
                        <input type="text" class="form__field" placeholder="Name" name="findGroup" id="findGroup" required />
                        <label for="findGroup" class="form__label">Группа</label>
                    </form>
                </div>
                <div class="find-block ">
                    <div class="block">
                        @foreach (GroupsOfTeacher group in Model.GroupsOfTeacher)
                        {
                            <div class="item-group">
                                <div class="item-title">
                                    @group.GroupDirectory.Title
                                </div>
                                <div class="item-count">
                                    <input type="checkbox" id="@group.Id" onclick="reply_click(this.id)" class="style-check">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-6 align-self-center">
            <div id="date-range" class="row justify-content-start">
                <div class="group">
                    <form asp-action="CreateEvent" method="post">
                        <label class="title-date">Введите название</label>
                        <input asp-for=Title type="text" id="title" value="@Model.Title" class="input-text" required>
                        <label class="title-date">Выберете дату</label>
                        @if (Model.DateEvent.ToString("yyyy-MM-dd").Equals("0001-01-01"))
                        {
                            <input asp-for="DateEvent" value="dd.mm.yyyy" type="date" id="dateEvent" class="input-date1" required>
                        }else{
                            <input asp-for="DateEvent" value="@Model.DateEvent.ToString("yyyy-MM-dd")" type="date" id="dateEvent" class="input-date1" required>
                        }
                        
                        <input asp-for="IdEvent" type="text" id="eventId" hidden value="@Model.IdEvent" class="input-date1">
                        <div class="wrapper text-center " >
                            <button type="button" class="button-style" onclick="sendArrayForEvent({url: '/Teacher/CreateEvent'})"><span>Создать</span></a>
                        </div>
                        <!-- <button type="submit" class="input-button">Сформировать</button> -->
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>